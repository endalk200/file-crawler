<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="400" maxWidth="600" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" styleClass="main_container" stylesheets="@style.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane prefHeight="382.0" prefWidth="600.0">
            <children>
                <TextField fx:id="filename_field" layoutX="128.0" layoutY="8.0" prefHeight="25.0" prefWidth="407.0" styleClass="search_field" />
                <CheckBox fx:id="deep_scan_field" onAction="#change_deep_scan" layoutX="9.0" layoutY="64.0" mnemonicParsing="false" text="deep scan" />
                <CheckBox fx:id="shallow_scan_field" onAction="#change_shallow_scan" layoutX="9.0" layoutY="40.0" mnemonicParsing="false" selected="true" text="shalow scan" />
                <Button fx:id="scan_btn" onAction="#scan" layoutX="542.0" layoutY="8.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="45.0" styleClass="search_btn" text="scan" />
                <ListView fx:id="result_list" layoutX="128.0" layoutY="64.0" prefHeight="298.0" prefWidth="465.0" styleClass="result_list_container" />
                <Label layoutX="14.0" layoutY="12.0" prefHeight="17.0" prefWidth="105.0" text="Scan Mode" />
                <Label layoutX="9.0" layoutY="98.0" prefHeight="17.0" prefWidth="111.0" text="Filter by extension" />
                <TextField fx:id="file_extension_field" layoutX="11.0" layoutY="123.0" prefHeight="25.0" prefWidth="111.0" />
                <Label fx:id="message_board" layoutX="128.0" layoutY="40.0" prefHeight="17.0" prefWidth="465.0" text="Enter filename and scan." />
                <Button fx:id="filter_btn" onAction="#scan_filter" layoutX="14.0" layoutY="156.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="105.0" text="filter" />
                <Button fx:id="recent_btn" onAction="#show_recent_searches" layoutX="11.0" layoutY="337.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="111.0" text="recent" />
            </children>
        </AnchorPane>
    </children>
</VBox>